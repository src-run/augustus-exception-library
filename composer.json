{
    "name"        : "src-run/augustus-exception-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://get.src.run/augustus-exception-library",
    "description" : "This library contains enhanced base exception implementations.",
    "support" : {
        "email"  : "rmf@src.run",
        "issues" : "https://get.src.run/augustus-exception-library/issues",
        "source" : "https://get.src.run/augustus-exception-library/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"   : [
        "augustus-exception-library", "exception", "library", "rmf", "src-run"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@src.run",
            "homepage": "https://get.src.run/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                              : "~5.6|~7.0",
        "src-run/augustus-utility-library" : "~0.5"
    },
    "require-dev" : {
        "phpunit/phpunit"        : "~5.0",
        "codacy/coverage"        : "~1.0",
        "satooshi/php-coveralls" : "~1.0"
    },
    "autoload" : {
        "psr-4" : {
            "SR\\Exception\\" : "lib/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SR\\Exception\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.5-dev"
        }
    }
}
